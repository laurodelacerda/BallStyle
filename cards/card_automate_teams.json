    },
    {
      "type": "ColumnSet",
      "separator": true,
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Punchout Shopping Cart",
              "wrap": true,
              "height": "stretch",
              "fontType": "default",
              "size": "medium",
              "color": "light",
              "weight": "bolder",
              "isSubtle": false,
              "spacing": "none",
              "horizontalAlignment": "left"
            }
          ]
        }
      ]
    },
    {
      "type": "Table",
      "firstRowAsHeader": true,
      "showGridLines": true,
      "gridStyle": "emphasis",
      "columns": [
        {
          "width": 1
        },
        {
          "width": 3
        },
        {
          "width": 1
        },
        {
          "width": 1
        },
        {
          "width": 1
        }
      ],
      "rows": [
        {
          "type": "TableRow",
          "cells": [
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "UoM",
                  "wrap": true,
                  "weight": "bolder"
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Item",
                  "wrap": true,
                  "weight": "bolder"
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "$ per Item",
                  "wrap": true,
                  "weight": "bolder"
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Quantity",
                  "wrap": true,
                  "weight": "bolder"
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Total",
                  "wrap": true,
                  "weight": "bolder"
                }
              ]
            }
          ]
        },
