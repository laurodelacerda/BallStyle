    {
      "type": "ColumnSet",
      "separator": true,
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "spacing": "Large",
          "items": [
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "$ Total Value",
                      "wrap": true,
                      "height": "stretch",
                      "fontType": "default",
                      "size": "medium",
                      "weight": "bolder",
                      "color": "light",
                      "spacing": "padding",
                      "horizontalAlignment": "right"
