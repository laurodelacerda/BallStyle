            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][0]['uom']}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][0]['item']}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][0]['value_item']}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][0]['quantity']}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][0]['total_item']}",
                  "wrap": true
                }
              ]
            }
          ]
        },
        {
          "type": "TableRow",
          "cells": [
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][1]['uom']}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][1]['item']}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][1]['value_item']}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{outputs('Data')?['cart'][1]['quantity']}",
                  "wrap": true
