              "actions": [
                {
                  "type": "Action.OpenUrl",
                  "title": "Approve",
                  "url": "@{outputs('Data')?['url_approve']}",
                  "style": "positive"
                }
              ],
              "horizontalAlignment": "center"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.OpenUrl",
                  "title": "Deny",
                  "url": "@{outputs('Data')?['url_deny']}",
                  "style": "destructive"
                }
              ],
              "horizontalAlignment": "center"
            }
          ]
        }
      ]
