                  ]
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "On Behalf of",
                      "wrap": true,
                      "height": "stretch",
                      "fontType": "Default",
                      "size": "Small",
                      "weight": "Bolder",
                      "color": "Accent",
                      "isSubtle": true,
                      "spacing": "Small",
                      "horizontalAlignment": "Right"
