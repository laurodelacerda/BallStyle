                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${purchase_org}",
                      "wrap": true,
                      "height": "stretch",
                      "fontType": "Default",
                      "size": "Small",
                      "weight": "Bolder",
                      "color": "Light",
