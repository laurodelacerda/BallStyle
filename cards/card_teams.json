                  "width": "stretch",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${id}",
                      "wrap": true,
                      "height": "stretch",
                      "fontType": "Default",
                      "size": "Small",
                      "weight": "Bolder",
                      "color": "Light",
                      "isSubtle": false,
                      "spacing": "Padding"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
